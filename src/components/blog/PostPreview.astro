---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "@/components/FormattedDate.astro";
import type { HTMLTag, Polymorphic } from "astro/types";
import type { Lang } from "@/i18n/utils";
import { defaultLang } from "@/i18n/ui";
import { stripLangFromSlug } from "@/data/post";

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }> & {
	post: CollectionEntry<"post">;
	withDesc?: boolean;
	lang?: Lang;
};

const { as: Tag = "div", post, withDesc = false, lang = defaultLang } = Astro.props;
const localizedSlug = stripLangFromSlug(post.id, post.data.lang ?? defaultLang);
const localePrefix = lang === defaultLang ? "" : `/${lang}`;
const postHref = `${localePrefix}/posts/${localizedSlug}/`;
---

<FormattedDate
	class="min-w-30 font-semibold text-gray-600 dark:text-gray-400"
	date={post.data.publishDate}
/>
<Tag>
	{post.data.draft && <span class="text-red-500">(Draft) </span>}
	<a class="cactus-link" href={postHref}>
		{post.data.title}
	</a>
</Tag>
{withDesc && <q class="line-clamp-3 italic">{post.data.description}</q>}
