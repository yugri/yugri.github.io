---
import PostsIndex from "@/components/blog/PostsIndex.astro";
import type { PostsPageProps } from "./page-helpers";
import { createPostsGetStaticPaths } from "./page-helpers";
import { defaultLang } from "@/i18n/ui";

export const getStaticPaths = createPostsGetStaticPaths(defaultLang);

const { page, uniqueTags, pinnedPosts, lang = defaultLang } = Astro.props as PostsPageProps;

const meta = {
	description: "Read my collection of posts and the things that interest me",
	title: "Posts",
};
---

<PostsIndex lang={lang} meta={meta} page={page} pinnedPosts={pinnedPosts} uniqueTags={uniqueTags} />
